// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1 @ configurando apenas aquele campo
// 2 @@ - configurando a tabela

model User {
  id    String @id @default(uuid()) //Toda tabela precisa de um @id
  name  String
  email String @unique

  @@map("user") // Modificando o nome da tabela
}
